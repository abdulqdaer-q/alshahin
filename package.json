{
  "name": "electron-menubar-app",
  "version": "1.0.0",
  "description": "A minimal Electron menubar application with TypeScript",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run clean && tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "watch": "tsc --watch",
    "start": "electron .",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64",
    "dist:mac:universal": "npm run build && electron-builder --mac --universal",
    "release": "npm run build && electron-builder --mac --universal --publish never"
  },
  "keywords": [
    "electron",
    "menubar",
    "typescript",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.5",
    "electron": "^28.1.3",
    "electron-builder": "^24.13.3",
    "electron-notarize": "^1.2.2",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
